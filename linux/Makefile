check-vscp-path:
	@if ! [ -z "$(VSCP_PATH)" ] && [ -d "$(VSCP_PATH)" ]; then\
		echo "VSCP root folder exists '$(VSCP_PATH)' - GOOD";\
	else\
		echo "The environment variable VSCP_PATH does not exists, it must \
exist and point to the VSCP main project folder. Either specify iy as \
an argument to make (make VSCP_PATH=....) or export it in .bashrc \
or equivalent.";\
		exit 1;\
	fi

